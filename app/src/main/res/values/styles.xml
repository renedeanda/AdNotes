<resources>

    <!-- Main application adGroupDescription. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- primary and accent colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/textDark</item>
        <!-- text color -->
        <item name="emptyTextColor">@color/wWunGray</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>
        <item name="textColorBlue">@color/googBlueDark</item>
        <item name="textColorAdNote">@color/textDark</item>
        <item name="colorToolbar">@android:color/transparent</item>
        <item name="toolBarStyle">@style/ToolBarStyleLight</item>
        <item name="android:windowBackground">@color/grey_200</item>
        <item name="cardBackgroundColor">@color/cardBackgroundWhite</item>
        <item name="android:colorControlHighlight">@color/textDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/grey_200</item>
        <item name="actionModeBackground">@color/grey_200</item>
        <item name="windowActionBar">false</item>

        <item name="alertDialogTheme">@style/DialogLight</item>
        <item name="android:alertDialogTheme">@style/DialogLight</item>

        <item name="android:popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>

        <item name="fabIconTint">@color/white</item>
        <item name="fabColorNormal">@color/textDark</item>
        <item name="fabColorPressed">@color/white</item>

    </style>

    <!-- Main application adGroupDescription. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- primary and accent colors -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/textLight</item>
        <!-- text color -->
        <item name="emptyTextColor">@color/wWunGray</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="textColorBlue">@color/googBlueLight</item>
        <item name="textColorAdNote">@color/textLight</item>
        <item name="colorToolbar">@android:color/transparent</item>
        <item name="toolBarStyle">@style/ToolBarStyleDark</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="cardBackgroundColor">@color/cardBackgroundBlack</item>
        <item name="android:colorControlHighlight">@color/textLight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/grey_400</item>
        <item name="actionModeBackground">@color/grey_400</item>
        <item name="windowActionBar">false</item>

        <item name="alertDialogTheme">@style/DialogDark</item>
        <item name="android:alertDialogTheme">@style/DialogDark</item>

        <item name="android:popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="colorSurface">@color/popup_menu_black</item>

        <item name="fabIconTint">@color/black</item>
        <item name="fabColorNormal">@color/textLight</item>
        <item name="fabColorPressed">@color/black</item>

    </style>

    <style name="ToolBarStyleLight" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="ToolBarStyleDark" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/grey_800</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="PopupMenuLight" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="PopupMenuDark" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="colorSurface">@color/grey_800</item>
    </style>

    <style name="DialogLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/textDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/Light.Dialog.Button.Neutral</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Light.Dialog.Button.Neutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/Light.Dialog.Button.Positive</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Light.Dialog.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Light.Dialog.Button.Neutral</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Light.Dialog.Button.Neutral</item>
    </style>

    <style name="DialogDark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/textLight</item>
        <item name="buttonBarNegativeButtonStyle">@style/Dark.Dialog.Button.Neutral</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Dark.Dialog.Button.Neutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/Dark.Dialog.Button.Positive</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Dark.Dialog.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Dark.Dialog.Button.Neutral</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Dark.Dialog.Button.Neutral</item>
    </style>

    <style name="Dark.Dialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Dark.Dialog.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Light.Dialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/black</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Light.Dialog.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>